// Definitions for several I2C based EEPROM
/dts-v1/;
/plugin/;

/ {
        compatible = "brcm,bcm2835";

        fragment@0 {
                target = <&i2cbus>;
                __dormant__ {
                        #address-cells = <1>;
                        #size-cells = <0>;
                        
                        at24c256: at24c256@50 {
                                compatible = "atmel,24c256";
                                reg = <0x50>;
                                pagesize = <64>;
                        };
                };      
        };

        fragment@1 {
                target = <&i2cbus>;
                __dormant__ {
                        #address-cells = <1>;
                        #size-cells = <0>;
                        
                        at24c16: at24c16@50 {
                                compatible = "atmel,24c16";
                                reg = <0x50>;
                                pagesize = <16>;
                        };
                };      
        };

        fragment@2 {
                target = <&i2cbus>;
                __dormant__ {
                        #address-cells = <1>;
                        #size-cells = <0>;
                        
                        at24c32: at24c32@50 {
                                compatible = "atmel,24c32";
                                reg = <0x50>;
                                pagesize = <32>;//32-Byte Page Write Mode from datasheet
                        };
                };      
        };

	frag100: fragment@100 {
		target = <&i2c_arm>;
		i2cbus: __overlay__ {
			status = "okay";
		};
	};

	fragment@101 {
		target = <&i2c0if>;
		__dormant__ {
			status = "okay";
		};
	};

	fragment@102 {
		target = <&i2c0mux>;
		__dormant__ {
			status = "okay";
		};
	};

	__overrides__ {
                at24c256 = <0>,"+0";
                at24c16 = <0>,"+1";
                at24c32 = <0>,"+2";
                addr = <&at24c256>, "reg:0";
		i2c0 = <&frag100>, "target:0=",<&i2c0>;
		i2c_csi_dsi = <&frag100>, "target:0=",<&i2c_csi_dsi>,
			      <0>,"+101+102";
		i2c3 = <&frag100>, "target?=0",
		       <&frag100>, "target-path=i2c3";
		i2c4 = <&frag100>, "target?=0",
		       <&frag100>, "target-path=i2c4";
		i2c5 = <&frag100>, "target?=0",
		       <&frag100>, "target-path=i2c5";
		i2c6 = <&frag100>, "target?=0",
		       <&frag100>, "target-path=i2c6";
	};
};
